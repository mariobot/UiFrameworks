<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/Content/materialize/css/materialize.css" rel="stylesheet" />
    <script src="~/Scripts/materialize/materialize.min.js"></script>

    @Styles.Render("~/Content/materialize")
    @Scripts.Render("~/bundles/materialize")
</head>
<body>
    <header>
        <nav>
            <div class="navbar-fixed center">
                <a href="#!" class="brand-logo">MaterializedCSS</a>
                <ul class="right hide-on-med-and-down">
                    <li><a href="http://materializecss.com/about.html" target="_blank" class="hide-on-med-and-down btn"><i class="material-icons left">materializecss.com</i></a></li>
                    <li><a href="https://about.me/mariobot" target="_blank" class="right">by: Mario Botero</a></li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <!-- Content for the page is here -->
        <div class="row">
            <!-- Grey navigation panel -->
            <div class="col s3">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">Materialized CSS</span>
                        <hr />
                        <ul class="collection">
                            <li class="collection-item">
                                <a href="@Url.Action("Buttons", "Home")" class="btn">Buttons</a>
                            </li>
                            <li class="collection-item">
                                <a href="@Url.Action("Cards", "Home")" class="btn">Cards</a>
                            </li>
                            <li class="collection-item">
                                <a href="@Url.Action("Collapsible","Home")" class="btn">Collapsible</a>
                            </li>
                            <li class="collection-item">
                                <a href="@Url.Action("Typography","Home")" class="btn">Typography</a>
                            </li>
                            <li class="collection-item">
                                <a href="@Url.Action("Forms","Home")" class="btn">Forms</a>
                            </li>
                            <li class="collection-item">
                                <a href="@Url.Action("Media", "Home")" class="btn">Media</a>
                            </li>
                            <li class="collection-item">

                            </li>
                            <li class="collection-item">

                            </li>
                        </ul>
                    </div>
                    <hr />
                    <div class="card-action">
                        @Html.ActionLink("Index", "Index", "Home")
                    </div>
                </div>
            </div>
            <!-- Teal page content  -->
            <div class="col s9">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="page-footer">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text">
                        Materialized CSS
                    </h5>
                    <h5 class="white-text">
                        (Framework web para interface de usuario )
                    </h5>
                    <p class="grey-text text-lighten-4">Los siguientes ejemplos fueron desarrollados por Mario Botero</p>
                </div>
                <div class="col l4 offset-l2 s12">
                    <h5 class="white-text">Links</h5>
                    <ul>
                        <li><a class="grey-text text-lighten-3" href="http://about.me/mariobot" target="_blank">About MaRioBoT</a></li>
                        <li><a class="grey-text text-lighten-3" href="http://twitter.com/mariobot" target="_blank">Twitter MaRioBot</a></li>
                        <li><a class="grey-text text-lighten-3" href="http://mariobot.wordpress.com" target="_blank">MaRioBot Blog</a></li>
                        <li><a class="grey-text text-lighten-3" href="http://materializecss.com/about.html" target="_blank">Official Page Materialized</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                © @DateTime.Now.Year Copyright Text
                <a class="grey-text text-lighten-4 right" href="http://about.me/mariobot" target="_blank">MaRioBoT</a>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
