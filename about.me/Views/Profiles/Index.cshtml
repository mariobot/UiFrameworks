@model IEnumerable<about.me.Models.Profile>

@{
    ViewBag.Title = "Perfiles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/ProfileCard.css" rel="stylesheet" />
<link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.1.0/css/font-awesome.min.css" />

<h2>Perfiles</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success">Crear Nuevo Perfil</a>
</p>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 ">
            <div class="media block-update-card">
                <div class="card-action-pellet btn-toolbar pull-right" role="toolbar">
                    <a href="@Url.Action("Edit", new { id=item.ProfileID })">
                        <div class="btn-group glyphicon glyphicon-edit"></div>
                    </a>
                    <a href="@Url.Action("Details", new { id=item.ProfileID })">
                        <div class="btn-group glyphicon glyphicon-dashboard"></div>
                    </a>
                    <a href="@Url.Action("Delete", new { id=item.ProfileID })">
                        <div class="btn-group glyphicon glyphicon-off"></div>
                    </a>
                </div>     
                <a class="pull-left" href="@Url.Action("About", new { id=item.ProfileID })" target="_blank">
                    <img class="media-object update-card-MDimentions" src="http://3.bp.blogspot.com/-IbEOTNtCMyU/TfCAdHaAxEI/AAAAAAAAA8U/EATib38SSAM/s320/joe-mcelderry.jpg" alt="...">
                </a>
                <div class="media-body update-card-body">
                    <h4 class="media-heading">@item.FirstName @item.LastName</h4>
                    <div class="btn-toolbar card-body-social" role="toolbar">
                        <h5>HABILIDADES</h5>
                        <a href="">
                            <div class="btn-group fa fa-send-o send"></div>
                        </a> 
                        <div class="btn-group linkedin fa fa-linkedin-square"></div>
                        <div class="btn-group twitter fa fa-twitter"></div>
                        <div class="btn-group facebook fa fa-facebook"></div>
                        <div class="btn-group google-plus fa fa-google-plus"></div>
                        <br />
                    </div>
                </div>
                <a href="@Url.Action("About", new { id=item.ProfileID })" target="_blank">
                    <p class="text-center card-bottom-status">
                        Perfil de @item.FirstName @item.LastName 
                    </p>
                </a>                
            </div>            
        </div>        
    }
</div>

