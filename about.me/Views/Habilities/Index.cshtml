@model IEnumerable<about.me.Models.Habilities>

@{
    ViewBag.Title = "Habilidades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Habilidades</h2>

<p>
    @Html.ActionLink("Adicionar Habilidad", "Create", null, htmlAttributes: new { @class="btn btn-success"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Profile.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameHability)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Porcentage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Profile.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NameHability)
        </td>
        <td>            
            <span class="pull-right">@item.Porcentage%</span>
            <div class="progress">
                <div class="progress-bar progress-bar-primary" role="progressbar"
                     aria-valuenow="@item.Porcentage" aria-valuemin="0" aria-valuemax="100" style="width: @item.Porcentage%;"></div>
            </div>            
        </td>
        <td>
            <a href="@Url.Action("Edit",new { id=item.HabilitiesID })"><span class="glyphicon glyphicon-edit"></span></a>
            <a href="@Url.Action("Details",new { id=item.HabilitiesID })"><span class="glyphicon glyphicon-list"></span></a>
            <a href="@Url.Action("Delete",new { id=item.HabilitiesID })"><span class="glyphicon glyphicon-remove-circle"></span></a>                        
        </td>
    </tr>
}

</table>
